@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model List<BlogsViewModel>

<section class="blog-posts grid-system">
    <div class="container">
        <div class="row">
            <div class="col-lg-9">
                <div class="all-blog-posts">
                    <div class="row">
                        @foreach (var item in Model)
                        {
                            <div class="col-lg-6">
                                <div class="blog-post">
                                    <div class="blog-thumb">
                                        <img src="~/assets/images/blog-thumb-01.jpg" alt="">
                                    </div>
                                    <div class="down-content">
                                        <span>@item.Post.Category.Name</span>
                                        <a href="PostDetails?postId=@item.Post.Id"><h4>@item.Post.Title</h4></a>
                                        <ul class="post-info">
                                            <li><a href="#">@item.Post.AuthorName</a></li>
                                            <li><a href="#">@item.Post.PublishDate.ToShortDateString()</a></li>
                                            <li><a href="#">@item.Post.Comments.Count()</a></li>
                                        </ul>
                                        <p>@item.Post.Content</p>
                                        <div class="post-options">
                                            <div class="row">
                                                <div class="col-lg-12">
                                                    <ul class="post-tags">
                                                        <li><i class="fa fa-tags"></i></li>
                                                        @foreach (var tag in item.Tags)
                                                        {
                                                            <li><a href="#">@tag.Name</a>,</li>
                                                        }
                                                    </ul>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }

                        <div class="col-lg-12">
                            <ul class="page-numbers">
                                <li><a href="asdasd">1</a></li>
                                <li class="active"><a href="#">2</a></li>
                                <li><a href="#">3</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-3">


                @await Component.InvokeAsync("Sidebar")
            </div>

        </div>
    </div>
</section>